{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "package": {
    "productName": "igc-app",
    "version": "0.1.0"
  },
  "build": {
    "beforeDevCommand": "yarn dev:front",
    "beforeBuildCommand": "yarn build:front",
    "devPath": "http://localhost:3000",
    "distDir": "../dist"
  },
  "tauri": {
    "allowlist": {
      "dialog": {
        "open": true
      },
      "fs": {
        "readFile": true,
        "renameFile": true
      }
    },
    "bundle": {
      "active": true,
      "identifier": "com.ciffelia.igc-app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "targets": "all"
    },
    "security": {
      "csp": "default-src 'self'"
    },
    "windows": [
      {
        "title": "igc-app",
        "width": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true
      }
    ]
  }
}
